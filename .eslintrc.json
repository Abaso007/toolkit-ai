{
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    "dist"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc"
        },
        "groups": [
          "builtin",
          "external",
          "internal"
        ],
        "pathGroups": [
          {
            "pattern": "Toolkit",
            "group": "internal"
          },
          {
            "pattern": "ToolFormatter",
            "group": "internal"
          },
          {
            "pattern": "ToolIterator",
            "group": "internal"
          },
          {
            "pattern": "lib/**",
            "group": "internal"
          },
          {
            "pattern": "tools/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": [
          "builtin",
          "object"
        ]
      }
    ]
  }
}